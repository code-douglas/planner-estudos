<link rel="stylesheet" href="/css/dashboard.css">

<div class="dashboard-container">
  <div class="dashboard-header">
    <h2>Meus Planos de Estudo</h2>
    <a href="/plans/create" class="btn-new-plan">
      <span>+</span> Criar Novo Plano
    </a>
  </div>

  {{#if plans.length}}
    <div class="plans-list">
      {{#each plans}}
        <div class="plan-card">
          <h3>{{this.title}}</h3>
          <p>{{this.description}}</p>
          <a href="/plans/{{this._id}}/edit" class="btn-edit">Editar</a>
          <form action="/plans/{{this._id}}/delete" method="POST" class="form-delete">
            <button type="submit" class="btn-delete">Excluir</button>
          </form>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="dashboard-content">
      <p>Você ainda não cadastrou nenhum plano de estudo.</p>
    </div>
  {{/if}}
</div>
